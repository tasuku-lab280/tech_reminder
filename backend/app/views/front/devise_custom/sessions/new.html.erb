<h2 class="text-center text-primary">ログイン</h2>
<div class="card mt-5 p-5">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group mb-3">
      <%= f.label :email %>
      <%= f.email_field :email, required: true, class: 'form-control' %>
    </div>

    <div class="form-group mb-3">
      <%= f.label :password %>
      <%= f.password_field :password, required: true, class: 'form-control' %>
    </div>

    <%= f.check_box :remember_me if devise_mapping.rememberable? %>
    <%= f.label :remember_me, 'パスワードを保存する' %>

    <%= f.submit 'ログイン', class: 'btn btn-primary mt-3 w-100' %>
  <% end %>

  <%= render "front/devise_custom/shared/links" %>
</div>
