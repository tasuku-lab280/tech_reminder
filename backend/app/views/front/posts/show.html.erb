<h2 class="text-center font-weight-bold"><%= @post.title %></h2>
<div class="text-center mt-4">
  <span class="text-muted small mr-4">
    <i class="fas fa-calendar-week"></i>
    <%= @post.created_at.strftime('%Y/%m/%d') %>に公開
  </span>
  <span class="text-muted small">
    <i class="fas fa-sync-alt"></i>
    <%= @post.updated_at.strftime('%Y/%m/%d') %>に更新
  </span>
</div>

<div class="row mt-4">
  <div class="col-md-9">
    <div class="bg-white rounded p-5">
      <%= markdown(@post.body) %>
    </div>
  </div>
  <div class="col-md-3">
    <%= render partial: 'front/shared/user_info', locals: { user: @user, posts: @user.posts } %>
  </div>
</div>
