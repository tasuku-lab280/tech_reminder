<header class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
  <div class="container d-flex">
    <a class="navbar-brand " href="/">TechReminder</a>
    <ul class="navbar-nav">
      <% if user_signed_in? %>
        <li class="dropdown">
          <a class="nav-link dropdown-toggle text-light" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= current_user.nickname %>
          </a>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to new_post_path, class: 'dropdown-item small' do %>
              <i class="fas fa-plus"></i>
              投稿する
            <% end %>
            <%= link_to '#', class: 'dropdown-item small' do %>
              <i class="fas fa-cog"></i>
              アカウント設定
            <% end %>
            <div class="dropdown-divider"></div>
            <%= link_to posts_user_path(current_user), class: 'dropdown-item small' do %>
              <i class="far fa-newspaper"></i>
              記事の管理
            <% end %>
            <div class="dropdown-divider"></div>
            <%= link_to destroy_user_session_path, method: :delete, class: 'dropdown-item small' do %>
              <i class="fas fa-sign-out-alt"></i>
              ログアウト
            <% end %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "新規会員登録", new_user_registration_path, class: 'btn btn-outline-light' %>
        </li>
        <li class="nav-item">
          <%= link_to "ログイン", new_user_session_path, class: 'nav-link' %>
        </li>
      <% end %>
    </ul>
  </div>
</header>
