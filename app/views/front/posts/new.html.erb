<%= form_with model: @post, local: true do |f| %>
  <header class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container d-flex">
      <a class="navbar-brand " href="/">TechReminder</a>
      <ul class="navbar-nav">
        <li class="nav-item">
          <%= f.submit '下書き保存', class: 'btn btn-primary' %>
        </li>
      </ul>
    </div>
  </header>

  <div class="form-group mb-3">
    <%= f.text_field :title, required: true, class: 'form-control', placeholder: 'Title' %>
  </div>

  <div class="form-group mb-3">
    <%= f.text_area :body, required: true, class: 'form-control', rows: 18 %>
  </div>
<% end %>
